    <declare-styleable name="TouchableTabLayoutTextAppearance">
        <attr name="android:textSize" />
        <attr name="android:textColor" />
    </declare-styleable>

    <dimen name="design_touchable_tab_text_size_2line">12sp</dimen>
    <dimen name="design_touchable_tab_scrollable_min_width">72dp</dimen>
